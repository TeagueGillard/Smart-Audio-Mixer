<Window x:Class="Smart_Audio_Mixer_Config.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smart_Audio_Mixer_Config"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Smart Audio Mixer Config" Height="450" Width="660" SizeToContent="WidthAndHeight">
    <Grid>
        
        <!-- Ensures the Editor and Compiled app have the same Width and Height-->
        <Rectangle x:Name="BackgroundRectangle" Fill="White" Width="660" Height="450" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Using Rectangles to Cover/Reveal an Image background as it uses 60% LESS GPU than using Progress Bars-->
        <Rectangle x:Name="AudioBar1VolumeRectangle" Margin="50,124,0,0" Width="20" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="Gray"/>
        <Label x:Name="AudioBar1VolumeLabel" Content="Volume: 100%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17.5,95,0,0" FontFamily="Ebrima" FontSize="12"/>
        <Button x:Name="AudioBar1MuteButton" Content="Mute" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,74,0,0" Width="80" Height="20" Click="AudioBar1MuteButton_Click"/>
        <ComboBox x:Name="AudioBar1AppComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,44,0,0" Width="80" Height="20" SelectionChanged="AudioBar1AppComboBox_SelectionChanged"/>

        <Rectangle x:Name="AudioBar2VolumeRectangle" Margin="150,124,0,0" Width="20" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="Gray"/>
        <Label x:Name="AudioBar2VolumeLabel" Content="Volume: 100%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="117.5,95,0,0" FontFamily="Ebrima" FontSize="12"/>
        <Button x:Name="AudioBar2MuteButton" Content="Mute" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,74,0,0" Width="80" Height="20" Click="AudioBar2MuteButton_Click"/>
        <ComboBox x:Name="AudioBar2AppComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,44,0,0" Width="80" Height="20" SelectionChanged="AudioBar2AppComboBox_SelectionChanged"/>

        <Rectangle x:Name="AudioBar3VolumeRectangle" Margin="250,124,0,0" Width="20" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="Gray"/>
        <Label x:Name="AudioBar3VolumeLabel" Content="Volume: 100%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="217.5,95,0,0" FontFamily="Ebrima" FontSize="12"/>
        <Button x:Name="AudioBar3MuteButton" Content="Mute" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,74,0,0" Width="80" Height="20" Click="AudioBar3MuteButton_Click"/>
        <ComboBox x:Name="AudioBar3AppComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,44,0,0" Width="80" Height="20" SelectionChanged="AudioBar3AppComboBox_SelectionChanged"/>

        <Rectangle x:Name="AudioBar4VolumeRectangle" Margin="350,124,0,0" Width="20" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="Gray"/>
        <Label x:Name="AudioBar4VolumeLabel" Content="Volume: 100%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="317.5,95,0,0" FontFamily="Ebrima" FontSize="12"/>
        <Button x:Name="AudioBar4MuteButton" Content="Mute" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,74,0,0" Width="80" Height="20" Click="AudioBar4MuteButton_Click"/>
        <ComboBox x:Name="AudioBar4AppComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,44,0,0" Width="80" Height="20" SelectionChanged="AudioBar4AppComboBox_SelectionChanged"/>

        <Rectangle x:Name="AudioBar5VolumeRectangle" Margin="450,124,0,0" Width="20" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="Gray"/>
        <Label x:Name="AudioBar5VolumeLabel" Content="Volume: 100%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="417.5,95,0,0" FontFamily="Ebrima" FontSize="12"/>
        <Button x:Name="AudioBar5MuteButton" Content="Mute" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,74,0,0" Width="80" Height="20" Click="AudioBar5MuteButton_Click"/>
        <ComboBox x:Name="AudioBar5AppComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,44,0,0" Width="80" Height="20" SelectionChanged="AudioBar5AppComboBox_SelectionChanged"/>

        <Label x:Name="DeviceTextLabel" Content="Device: " HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,109,110" FontFamily="Ebrima" FontSize="12"/>
        <Label x:Name="DeviceStatusLabel" Content="Not Connected" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="545,0,0,110" FontFamily="Ebrima" FontSize="12" Foreground="Red"/>

        <Label x:Name="DeviceVIDLabel" Content="Device VID:" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,90,80" FontFamily="Ebrima" FontSize="12"/>
        <TextBox x:Name="DeviceVIDTextBox" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,83" Width="60" Height="20"/>
        
        <Label x:Name="DevicePIDLabel" Content="Device PID:" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,90,50" FontFamily="Ebrima" FontSize="12"/>
        <TextBox x:Name="DevicePIDTextBox" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,53" Width="60" Height="20"/>

        <Button x:Name="SaveButton" Content="Save Settings" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,10" Width="100" Height="30" Click="SaveButton_Click"/>
    </Grid>
</Window>
